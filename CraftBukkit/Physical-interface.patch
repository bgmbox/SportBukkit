+++ b/src/main/java/org/bukkit/craftbukkit/projectiles/CraftBlockProjectileSource.java
@@ -4,6 +4,7 @@ import java.util.Random;
 
 import org.apache.commons.lang.Validate;
 import org.bukkit.Material;
